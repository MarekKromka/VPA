<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/friYellow">

    <ImageView
        android:id="@+id/logo_fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/frilogo" />

    <EditText
        android:id="@+id/userInput"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="255dp"
        android:background="#11000000"
        android:drawableEnd="@drawable/ic_action_email_user"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#337ab7" />

    <EditText
        android:id="@+id/passInput"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="181dp"
        android:background="#11000000"
        android:drawableEnd="@drawable/ic_action_password_user"
        android:ems="10"
        android:hint="Heslo"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColor="#337ab7" />

    <android.support.v7.widget.CardView
        android:id="@+id/loginBtn"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="PRIHLÁSIŤ"
                android:textColor="#337ab7"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>